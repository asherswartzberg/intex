<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add <%= tableName %> | Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <header class="main-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <a href="/"><h1>Ella Rises</h1></a>
                </div>
                <nav class="main-nav">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/viewEvents">View Events</a></li>
                        <li><a href="/dashboard">Dashboard</a></li>
                    </ul>
                </nav>
                <button class="hamburger-menu" id="hamburgerBtn" aria-label="Menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </div>
    </header>

    <!-- Sidebar Navigation -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <nav class="sidebar" id="sidebar">
        <button class="sidebar-close" id="sidebarClose">&times;</button>
        <ul class="sidebar-menu">
            <% if (username) { %>
                <li class="sidebar-user-info">
                    <strong><%= username %></strong>
                    <span><%= level === 'M' ? 'Manager' : 'User' %></span>
                </li>
                <% if (level === 'M') { %>
                    <li><a href="/users">Users</a></li>
                <% } %>
                <li><a href="/participants">Participants</a></li>
                <li><a href="/events">Events</a></li>
                <li><a href="/surveys">Surveys</a></li>
                <li><a href="/milestones">Milestones</a></li>
                <li><a href="/donations">Donations</a></li>
                <li><a href="/logout" class="sidebar-logout">Logout</a></li>
            <% } else { %>
                <li><a href="/login" class="sidebar-login">Login</a></li>
            <% } %>
        </ul>
    </nav>

    <% if (username) { %>
        <section class="welcome-banner">
            <div class="container">
                <p class="welcome-message">
                    Welcome back, <strong><%= username %></strong>! 
                    <span class="user-role">(<%= level === 'M' ? 'Manager' : 'User' %>)</span>
                </p>
            </div>
        </section>
    <% } %>

    <main class="page-container">
        <div class="container">
            <div class="form-page-header">
                <h2 class="page-title">Add New <%= tableName %></h2>
                <a href="/<%= returnPath === 'users' ? returnPath : returnPath + 's' %>" class="btn btn-secondary btn-small">Back to <%= tableName === 'users' ? tableName : tableName + 's' %></a>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error"><%= error %></div>
            <% } %>

            <div class="form-container">
                <form action="/<%= returnPath %>/add" method="POST">
                    <% columns.forEach(column => { %>
                        <% if (!column.isPrimary && !column.isAutoIncrement) { %>
                            <div class="form-group">
                                <label for="<%= column.name %>">
                                    <%= formatName(column.name) %>
                                    <% if (column.isRequired) { %><span class="required">*</span><% } %>
                                </label>
                                
                                <% if (column.dataType === 'character varying' || column.dataType === 'varchar' || column.dataType === 'text') { %>
                                    <% if (column.name === 'level') { %>
                                        <div class="radio-group horizontal">
                                            <div class="radio-option">
                                                <input type="radio" id="level-u" name="level" value="U" checked>
                                                <label for="level-u" class="radio-label">User</label>
                                            </div>
                                            <div class="radio-option">
                                                <input type="radio" id="level-m" name="level" value="M">
                                                <label for="level-m" class="radio-label">Manager</label>
                                            </div>
                                        </div>
                                    <% } else if (column.name === 'participantfieldofinterest') { %>
                                        <div class="radio-group horizontal">
                                            <div class="radio-option">
                                                <input type="radio" id="STEM" name=<%= column.name %> value="STEM" checked>
                                                <label for="STEM" class="radio-label">STEM</label>
                                            </div>
                                            <div class="radio-option">
                                                <input type="radio" id="Arts" name=<%= column.name %> value="Arts">
                                                <label for="Arts" class="radio-label">Arts</label>
                                            </div>
                                            <div class="radio-option">
                                                <input type="radio" id="Both" name=<%= column.name %> value="Both">
                                                <label for="Both" class="radio-label">Both</label>
                                            </div>
                                        </div>
                                    <% } else if (column.name === 'eventtype') { %>
                                        <div class="radio-group horizontal">
                                            <div class="radio-option">
                                                <input type="radio" id="STEM" name=<%= column.name %> value="STEM" checked>
                                                <label for="STEM" class="radio-label">STEM</label>
                                            </div>
                                            <div class="radio-option">
                                                <input type="radio" id="Arts" name=<%= column.name %> value="Arts">
                                                <label for="Arts" class="radio-label">Arts</label>
                                            </div>
                                            <div class="radio-option">
                                                <input type="radio" id="Leadership" name=<%= column.name %> value="Leadership">
                                                <label for="Leadership" class="radio-label">Leadership</label>
                                            </div>
                                        </div>
                                    <% } else if (column.name === 'eventrecurrencepattern') { %>
                                        <div class="radio-group horizontal">
                                            <div class="radio-option">
                                                <input type="radio" id="Weekly" name=<%= column.name %> value="Weekly" checked>
                                                <label for="Weekly" class="radio-label">Weekly</label>
                                            </div>
                                            <div class="radio-option">
                                                <input type="radio" id="Monthly" name=<%= column.name %> value="Monthly">
                                                <label for="Monthly" class="radio-label">Monthly</label>
                                            </div>
                                            <div class="radio-option">
                                                <input type="radio" id="Annual" name=<%= column.name %> value="Annual">
                                                <label for="Annual" class="radio-label">Annual</label>
                                            </div>
                                        </div>
                                    <% } else if (column.name === 'surveynpsbucket') { %>
                                        <div class="radio-group horizontal">
                                            <div class="radio-option">
                                                <input type="radio" id="Promoter" name=<%= column.name %> value="Promoter" checked>
                                                <label for="Promoter" class="radio-label">Promoter</label>
                                            </div>
                                            <div class="radio-option">
                                                <input type="radio" id="Passive" name=<%= column.name %> value="Passive">
                                                <label for="Passive" class="radio-label">Passive</label>
                                            </div>
                                            <div class="radio-option">
                                                <input type="radio" id="Detractor" name=<%= column.name %> value="Detractor">
                                                <label for="Detractor" class="radio-label">Detractor</label>
                                            </div>
                                        </div>
                                    <% } else if (column.dataType === 'text') { %>
                                        <textarea 
                                            id="<%= column.name %>" 
                                            name="<%= column.name %>"
                                            <%= column.isRequired ? 'required' : '' %>
                                            placeholder="Enter <%= formatName(column.name) %>"
                                        ></textarea>
                                    <% } else { %>
                                        <input 
                                            type="text" 
                                            id="<%= column.name %>" 
                                            name="<%= column.name %>"
                                            <%= column.isRequired ? 'required' : '' %>
                                            <%= column.maxLength ? `maxlength="${column.maxLength}"` : '' %>
                                            placeholder="Enter <%= formatName(column.name) %>"
                                        >
                                    <% } %>
                                
                                <% } else if (column.dataType === 'integer' || column.dataType === 'int') { %>
                                    <input 
                                        type="number" 
                                        id="<%= column.name %>" 
                                        name="<%= column.name %>"
                                        <%= column.isRequired ? 'required' : '' %>
                                        step="1"
                                        placeholder="Enter <%= formatName(column.name) %>"
                                    >
                                
                                <% } else if (column.dataType === 'decimal' || column.dataType === 'numeric' || column.dataType === 'float' || column.dataType === 'double') { %>
                                    <input 
                                        type="number" 
                                        id="<%= column.name %>" 
                                        name="<%= column.name %>"
                                        <%= column.isRequired ? 'required' : '' %>
                                        step="0.01"
                                        placeholder="Enter <%= formatName(column.name) %>"
                                    >
                                
                                <% } else if (column.dataType === 'datetime' || column.dataType === 'timestamp' || column.dataType === 'date') { %>
                                    <input 
                                        type="<%= column.dataType === 'date' ? 'date' : 'datetime-local' %>" 
                                        id="<%= column.name %>" 
                                        name="<%= column.name %>"
                                        <%= column.isRequired ? 'required' : '' %>
                                    >
                                
                                <% } else if (column.dataType === 'boolean' || column.dataType === 'bit') { %>
                                    <div class="checkbox-group">
                                        <input 
                                            type="checkbox" 
                                            id="<%= column.name %>" 
                                            name="<%= column.name %>"
                                            value="true"
                                        >
                                        <label for="<%= column.name %>" class="checkbox-label">
                                            <%= formatName(column.name) %>
                                        </label>
                                    </div>
                                
                                <% } else { %>
                                    <input 
                                        type="text" 
                                        id="<%= column.name %>" 
                                        name="<%= column.name %>"
                                        <%= column.isRequired ? 'required' : '' %>
                                        placeholder="Enter <%= formatName(column.name) %>"
                                    >
                                <% } %>
                                
                                <% if (column.hint) { %>
                                    <small class="form-hint"><%= column.hint %></small>
                                <% } %>
                            </div>
                        <% } %>
                    <% }); %>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Add <%= tableName %></button>
                        <a href="/<%= returnPath === 'users' ? returnPath : returnPath + 's' %>" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="main-footer">
        <div class="container">
            <div class="footer-bottom">
                <p>&copy; <%= new Date().getFullYear() %> Ella Rises. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // Sidebar functionality
        const hamburgerBtn = document.getElementById('hamburgerBtn');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        const sidebarClose = document.getElementById('sidebarClose');

        function openSidebar() {
            sidebar.classList.add('open');
            sidebarOverlay.classList.add('open');
            document.body.style.overflow = 'hidden';
        }

        function closeSidebar() {
            sidebar.classList.remove('open');
            sidebarOverlay.classList.remove('open');
            document.body.style.overflow = '';
        }

        hamburgerBtn.addEventListener('click', openSidebar);
        sidebarClose.addEventListener('click', closeSidebar);
        sidebarOverlay.addEventListener('click', closeSidebar);

        // Close sidebar when clicking a link
        document.querySelectorAll('.sidebar-menu a').forEach(link => {
            link.addEventListener('click', closeSidebar);
        });
    </script>
</body>
</html>