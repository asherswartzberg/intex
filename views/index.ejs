<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <header class="main-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <a href="/"><h1>Ella Rises</h1></a>
                </div>
                <nav class="main-nav">
                    <ul>
                        <li><a href="/" class="active">Home</a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/viewEvents">View Events</a></li>
                        <li><a href="/dashboard">Dashboard</a></li>
                    </ul>
                </nav>
                <button class="hamburger-menu" id="hamburgerBtn" aria-label="Menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </div>
    </header>

    <!-- Sidebar Navigation -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <nav class="sidebar" id="sidebar">
        <button class="sidebar-close" id="sidebarClose">&times;</button>
        <ul class="sidebar-menu">
            <% if (username) { %>
                <li class="sidebar-user-info">
                    <strong><%= username %></strong>
                    <span><%= level === 'M' ? 'Manager' : 'User' %></span>
                </li>
                <% if (level === 'M') { %>
                    <li><a href="/users">Users</a></li>
                <% } %>
                <li><a href="/participants">Participants</a></li>
                <li><a href="/events">Events</a></li>
                <li><a href="/surveys">Surveys</a></li>
                <li><a href="/milestones">Milestones</a></li>
                <li><a href="/donations">Donations</a></li>
                <li><a href="/logout" class="sidebar-logout">Logout</a></li>
            <% } else { %>
                <li><a href="/login" class="sidebar-login">Login</a></li>
            <% } %>
        </ul>
    </nav>

    <main>
        <% if (username) { %>
            <section class="welcome-banner">
                <div class="container">
                    <p class="welcome-message">
                        Welcome back, <strong><%= username %></strong>! 
                        <span class="user-role">(<%= level === 'M' ? 'Manager' : 'User' %>)</span>
                    </p>
                </div>
            </section>
        <% } %>

        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <h2>Welcome to Ella Rises</h2>
                    <p class="hero-subtitle">Empowering young women through education, culture, and community</p>
                </div>
            </div>
        </section>

        <section class="image-showcase">
            <div class="container">
                <div class="showcase-grid">
                    <div class="showcase-item">
                        <img src="/images/ellarisescraft.jpg" alt="Workshop participants" class="showcase-image">
                    </div>
                    <div class="showcase-item">
                        <img src="/images/ellariseshomepage.jpeg" alt="Ella Rises Community" class="showcase-image">
                    </div>
                    <div class="showcase-item">
                        <img src="/images/ellarisesschool.jpg" alt="Workshop participants" class="showcase-image">
                    </div>
                </div>
            </div>
        </section>

        <section class="action-section enroll-section">
            <div class="container">
                <div class="action-content">
                    <div class="action-text">
                        <div class="section-header">
                            <h3>Participate in Events</h3>
                            <div class="underline"></div>
                        </div>
                        <p class="action-description">Join our vibrant community of young women! Enroll today to take part in STEAM-focused programs, cultural events, and educational workshops designed to empower you through learning and creativity.</p>
                        <a href="https://docs.google.com/forms/d/1hUJeUu-q9w7ajSUU9jjgYsF8XjGPO7_ElktBYiMt-uU/viewform?edit_requested=true" target="_blank" class="btn btn-primary">Enroll Now</a>
                    </div>
                    <div class="action-image">
                        <img src="/images/ellarisesworkshop.jpg" alt="Workshop participants" class="feature-image">
                    </div>
                </div>
            </div>
        </section>

        <section class="action-section donate-section">
            <div class="container">
                <div class="action-content reverse">
                    <div class="action-image">
                        <img src="/images/ellarisesmural.jpg" alt="Community mural project" class="feature-image">
                    </div>
                    <div class="action-text">
                        <div class="section-header">
                            <h3>Support Our Organization</h3>
                            <div class="underline"></div>
                        </div>
                        <p class="action-description">Your donations make a real difference! Help us continue empowering young women in our community through culturally rooted programs, educational opportunities, and meaningful experiences.</p>
                        <a href="https://givebutter.com/EllaRises" target="_blank" class="btn btn-primary">Donate Now</a>
                    </div>
                </div>
            </div>
        </section>

        <section class="cta">
            <div class="container">
                <div class="cta-content">
                    <h3>We Want to Hear From You</h3>
                    <p>Have you attended an event, reached a milestone, or donated? Fill out one of the forms to let us know!</p>
                    <div class="cta-buttons">
                        <a href="/email" class="btn btn-tertiary">Event Surveys</a>
                        <a href="/visitorMilestone" class="btn btn-tertiary">Milestones</a>
                        <a href="/visitorDonate" class="btn btn-tertiary">Donations</a>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="main-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4>Ella Rises</h4>
                    <p>Empowering young women through education, culture, and community</p>
                </div>
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a href="/about">About</a></li>
                        <li><a href="/dashboard">Dashboard</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Contact</h4>
                    <p>Visit: <a href="https://ellarises.org" target="_blank">ellarises.org</a></p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; <%= new Date().getFullYear() %> Ella Rises. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // Sidebar functionality
        const hamburgerBtn = document.getElementById('hamburgerBtn');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        const sidebarClose = document.getElementById('sidebarClose');

        function openSidebar() {
            sidebar.classList.add('open');
            sidebarOverlay.classList.add('open');
            document.body.style.overflow = 'hidden';
        }

        function closeSidebar() {
            sidebar.classList.remove('open');
            sidebarOverlay.classList.remove('open');
            document.body.style.overflow = '';
        }

        hamburgerBtn.addEventListener('click', openSidebar);
        sidebarClose.addEventListener('click', closeSidebar);
        sidebarOverlay.addEventListener('click', closeSidebar);

        // Close sidebar when clicking a link
        document.querySelectorAll('.sidebar-menu a').forEach(link => {
            link.addEventListener('click', closeSidebar);
        });
    </script>
</body>
</html>