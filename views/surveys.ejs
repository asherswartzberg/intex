<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Surveys | Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <header class="main-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <a href="/"><h1>Ella Rises</h1></a>
                </div>
                <nav class="main-nav">
                    <ul>
                        <% if (username) { %>
                            <% if (level === 'M') { %>
                                <li><a href="/users">Users</a></li>
                            <% } %>
                            <li><a href="/participants">Participants</a></li>
                            <li><a href="/events">Events</a></li>
                            <li><a href="/surveys" class="active">Surveys</a></li>
                            <li><a href="/milestones">Milestones</a></li>
                            <li><a href="/donations">Donations</a></li>
                            <li><a href="/dashboard">Dashboard</a></li>
                            <li><a href="/logout">Logout</a></li>
                        <% } else { %>
                            <li><a href="/dashboard">Dashboard</a></li>
                            <li><a href="/login">Login</a></li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <% if (username) { %>
        <section class="welcome-banner">
            <div class="container">
                <p class="welcome-message">
                    Welcome back, <strong><%= username %></strong>! 
                    <span class="user-role">(<%= level === 'M' ? 'Manager' : 'User' %>)</span>
                </p>
            </div>
        </section>
    <% } %>

    <main class="page-container">
        <div class="container">
            <div class="page-header">
                <h2 class="page-title">Post Event Surveys</h2>
                <% if (level === 'M') { %>
                    <a href="/survey/add" class="btn btn-primary">Add New Survey</a>
                <% } %>
            </div>

            <% if (typeof message !== 'undefined' && message) { %>
                <div class="alert alert-success"><%= message %></div>
            <% } %>
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error"><%= error %></div>
            <% } %>

            <div class="search-bar">
                <input 
                    type="text" 
                    class="search-input" 
                    placeholder="Search by event name..."
                    value="<%= search || '' %>"
                    onkeyup="handleSearch(event)"
                >
            </div>

            <div class="table-container">
                <% if (surveys.length > 0) { %>
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Participant Name</th>
                                <th>Overall Score</th>
                                <th>Submission Date</th>
                                <% if (level === 'M') { %>
                                    <th>Actions</th>
                                <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% surveys.forEach(survey => { %>
                                <tr>
                                    <td><%= survey.eventname %></td>
                                    <td><%= survey.participantfirstname %></td>
                                    <td><%= survey.surveyoverallscore %></td>
                                    <td><%= new Date(survey.surveysubmissiondate).toLocaleDateString() %></td>
                                    <% if (level === 'M') { %>
                                        <td class="action-buttons">
                                            <a href="/survey/edit/<%= survey.surveyid %>" class="btn btn-small btn-edit">Edit</a>
                                            <form action="/surveys/delete/<%= survey.surveyid %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this survey?');">
                                                <button type="submit" class="btn btn-small btn-delete">Delete</button>
                                            </form>
                                        </td>
                                    <% } %>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="no-data">No surveys found</div>
                <% } %>
            </div>

            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <div class="pagination-info">
                        Page <%= currentPage %> of <%= totalPages %> (Total: <%= totalRecords %> surveys)
                    </div>
                    <div class="pagination-buttons">
                        <% if (currentPage > 1) { %>
                            <a href="?page=1&search=<%= search || '' %>" class="pagination-btn">First</a>
                            <a href="?page=<%= currentPage - 1 %>&search=<%= search || '' %>" class="pagination-btn">Previous</a>
                        <% } %>
                        
                        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                            <a href="?page=<%= i %>&search=<%= search || '' %>" class="pagination-btn <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <a href="?page=<%= currentPage + 1 %>&search=<%= search || '' %>" class="pagination-btn">Next</a>
                            <a href="?page=<%= totalPages %>&search=<%= search || '' %>" class="pagination-btn">Last</a>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <footer class="main-footer">
        <div class="container">
            <div class="footer-bottom">
                <p>&copy; <%= new Date().getFullYear() %> Ella Rises. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        function handleSearch(event) {
            if (event.key === 'Enter') {
                const searchValue = event.target.value;
                window.location.href = `/surveys?search=${encodeURIComponent(searchValue)}`;
            }
        }
    </script>
</body>
</html>